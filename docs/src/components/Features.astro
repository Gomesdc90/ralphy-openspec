<style>
  .section-alt {
    background-color: var(--color-bg-secondary);
  }

  .code-block {
    max-width: 600px;
    margin: 0 auto 3rem;
  }

  .code-label {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: 0.5rem;
  }

  .card h3 {
    margin-bottom: 0.5rem;
    font-size: 1.125rem;
  }

  .card p {
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    margin-bottom: 0;
  }

  .card-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .comparison-table {
    max-width: 800px;
    margin: 0 auto;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
  }

  .comparison-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
  }

  .comparison-row.header {
    background-color: var(--color-bg-tertiary);
    font-weight: 600;
  }

  .comparison-cell {
    padding: 1rem 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .comparison-row:last-child .comparison-cell {
    border-bottom: none;
  }

  .comparison-cell:first-child {
    border-right: 1px solid var(--color-border);
  }

  .problem {
    color: var(--color-text-secondary);
  }

  .solution {
    color: var(--color-success);
  }

  .platform-card {
    display: block;
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    transition: all 0.2s ease;
    color: var(--color-text);
  }

  .platform-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-4px);
    color: var(--color-text);
  }

  .platform-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .platform-card h3 {
    margin-bottom: 0.5rem;
  }

  .platform-link {
    color: var(--color-primary);
    font-size: 0.875rem;
  }

  .credit-card a {
    display: inline-block;
    margin-top: 1rem;
    font-size: 0.875rem;
  }

  .credits-thanks {
    text-align: center;
    color: var(--color-text-secondary);
    margin-top: 2rem;
    font-style: italic;
  }

  @media (max-width: 640px) {
    .comparison-row {
      grid-template-columns: 1fr;
    }

    .comparison-cell:first-child {
      border-right: none;
    }
  }
</style>
