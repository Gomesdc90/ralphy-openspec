---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import LanguagePicker from './LanguagePicker.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<nav class="nav">
  <div class="container nav-container">
    <a href={`/${lang}/`} class="nav-logo">
      <span class="logo-icon">R</span>
      <span class="logo-text">Ralphy-Spec</span>
    </a>
    
    <div class="nav-links">
      <a href={`/${lang}/`}>{t('nav.home')}</a>
      <a href={`/${lang}/docs/`}>{t('nav.docs')}</a>
      <a href="https://github.com/anthropics/ralphy-openspec" target="_blank" rel="noopener">
        {t('nav.github')}
      </a>
      <LanguagePicker />
    </div>
  </div>
</nav>

<style>
  .nav {
    position: sticky;
    top: 0;
    z-index: 100;
    background-color: rgba(15, 15, 15, 0.9);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid var(--color-border);
    padding: 1rem 0;
  }

  .nav-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    font-size: 1.25rem;
    color: var(--color-text);
  }

  .nav-logo:hover {
    color: var(--color-text);
  }

  .logo-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    border-radius: 8px;
    font-weight: bold;
    color: white;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-links a {
    color: var(--color-text-secondary);
    font-size: 0.95rem;
  }

  .nav-links a:hover {
    color: var(--color-text);
  }

  @media (max-width: 640px) {
    .logo-text {
      display: none;
    }

    .nav-links {
      gap: 1rem;
    }
  }
</style>
